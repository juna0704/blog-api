{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*", "src/@types/**/*"],
  "exclude": ["node_modules"]
}
